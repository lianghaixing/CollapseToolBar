<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleTextColor="@color/white"
            android:background="@color/colorPrimary"/>

        <Button
            android:onClick="withFitSystem"
            android:layout_marginTop="@dimen/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/collapse_with_fit_system_window" />

        <Button android:onClick="transParentStatusBar"
            android:layout_marginTop="@dimen/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/collapse_transparent_statusbar" />

        <Button android:onClick="collapseRecyclerView"
            android:layout_marginTop="@dimen/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/collapse_recyclerView" />


    </LinearLayout>
</layout>
